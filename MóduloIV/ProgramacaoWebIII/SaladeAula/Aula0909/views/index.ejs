<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ToDo List</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5kNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <h1 class="my-4 text-center">ToDo task list</h1>
      <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
          <thead class="table-dark">
            <tr>
              <th>Task</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% tasks.forEach(task => { %>
            <tr>
              <td class="align-middle"><%= task.title %></td>
              <td class="align-middle">
                <span
                  class="badge <%= task.completed ? 'bg-success' : 'bg-warning text-dark' %>"
                >
                  <%= task.completed?"Completed":"Pending" %>
                </span>
              </td>
              <td class="align-middle">
                <a
                  href="/tasks/<%= task.id %>"
                  class="btn btn-sm btn-success me-1"
                  >Finish</a
                >
                <a href="/delTasks/<%= task.id %>" class="btn btn-sm btn-danger"
                  >Delete</a
                >
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <div class="mt-3">
        <a href="/newTask" class="btn btn-primary">New task</a>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
